# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
# Set default charset
charset = utf-8
# 4 space indentation
indent_size = 4

# Matches .astro files and the exact file package.json
[{*.astro, package.json}]
indent_style = space
indent_size = 2
