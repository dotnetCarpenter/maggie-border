---
import { Image } from "astro:assets";
import images from "./Images.js";
const {BASE_URL} = import.meta.env;
---

<script src={`${BASE_URL}/js/imageSlider.js`} type="text/javascript"></script>

<div class="slideshow">
  {
    images.map(img => (
      <Image
        src={img}
        height="600"
        alt=""
        onload="slide(this)"
        class="slider-img"
      />
    ))
  }
</div>

<style>
  .slideshow {
    position: relative;
    height: 600px;
    margin: 0 auto;
    padding: 0;
    display: flex;
    justify-content: center;
  }

  img {
    position: absolute;
    opacity: 0;
  }
  @media (max-width: 400px) {
    .slideshow {
      height: auto;
      height: 50vh;
      max-width: 400px;
    }
    img {
      max-height: 50vh;
    }
  }
</style>
