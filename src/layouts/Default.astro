---
// import { ViewTransitions } from 'astro:transitions'

const { title, description } = Astro.props
const {BASE_URL} = import.meta.env
---

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={`${BASE_URL}/favicon.svg`} />
    <title>{title}</title>
    <!-- <ViewTransitions/> -->
</head>

<body>
    <header>
        <h1>{title}</h1>
    </header>

	<nav>
		<ul>
			<li><a href={BASE_URL}>Home</a></li>
			<li><a href={`${BASE_URL}/works`}>Works</a></li>
			<li><a href={`${BASE_URL}/biography`}>Biography</a></li>
			<li><a href={`${BASE_URL}/contact`}>Contact me</a></li>
		</ul>
	</nav>

	<main>
		<slot></slot>
	</main>

    <footer>
        &copy; Maggie Borger 2023
    </footer>
</body>
</html>

<style is:global>
/* CSS Document */

/* Utilities */
img {
	max-width: 100%;
	height: auto;
}

/* Layout */
body {
	width: min(90%, 1200px);
	/* The min function is the same as below:
	width: 90%;
	max-width: 1200px; */
	margin: 40px auto;
	/* The main short-hand is the same as below:
	margin-left: auto;
	margin-right: auto;
	margin-top: 40px;
	margin-bottom: 40px;
	*/

	font-family: "circular", sans-serif;
	line-height: 1.6;

	display: grid;
	grid-template-columns: 6fr 20fr;
	grid-template-rows: min-content auto min-content;
	grid-template-areas: "header header"
						 "nav main"
						 ". footer";
}

@media (max-width: 636px) {
	body {
		grid-template-areas:"header header"
							"nav nav"
							"main main"
							"footer footer";
	}
}

header {
	grid-area: header;
}

nav {
	grid-area: nav;
}
nav ul {
	list-style: none;
	padding: 0;
	text-align: left;
}
nav a {
	display: inline-block;
	margin-left: 0;
	padding: .5em;

	text-decoration: none;
	color: black;
	transition: .3s;
}
nav a:hover {
	transform: scale(1.1);
	color: #0C243C;
}

main {
	grid-area: main;
    margin-top: 1.5em;
}
@media (max-width: 636px) {
	main {
		margin-top: 0;
	}
}

footer {
	grid-area: footer;
	text-align: center;
	margin-top: 40px;
	font-size: smaller;
}
</style>